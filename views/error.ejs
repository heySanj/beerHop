<% layout('./layouts/boilerplate') %> 

<div class="row mt-5 errorMessage">
    <div class="alert alert-danger" role="alert">
        <h1 class="alert-heading"><%= err.status %> Error!</h4>
        <hr>
        <p><%= err.message %></p>
        <% if (process.env.NODE_ENV !== 'production') { %>
            <hr>
            <p><%= err.stack %></p>
        <% } %>
    </div>
</div>
